<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".PagePromotion">

    <!--&lt;!&ndash;나 room 타이틀 레이아웃&ndash;&gt;
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/promotion_page_title_layout"
        app:layout_constraintTop_toTopOf="parent"
        android:background="#001023"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/promotion_page_room_name_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="나 room"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:gravity="center"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        app:layout_constraintTop_toBottomOf="@id/promotion_page_title_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:paddingBottom="130dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            &lt;!&ndash;이미지 슬라이더&ndash;&gt;
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                &lt;!&ndash;이미지 뷰페이져&ndash;&gt;
                <androidx.viewpager.widget.ViewPager
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/promotion_page_image_viewPager"
                    android:background="@drawable/style_bottom_bababa_1dp_solid_transparent"
                    android:layout_width="match_parent"
                    android:layout_height="261dp"/>
                &lt;!&ndash;이미지 수. 1/5 부분&ndash;&gt;
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/promotion_page_image_slider_num_layout"
                    android:visibility="invisible"
                    app:layout_constraintBottom_toBottomOf="@id/promotion_page_image_viewPager"
                    app:layout_constraintRight_toRightOf="@id/promotion_page_image_viewPager"
                    android:layout_marginRight="15dp"
                    android:layout_marginBottom="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:paddingBottom="5dp"
                    android:background="@drawable/style_radius10_solid_7d7d7d_opacity_70">
                    <LinearLayout
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintRight_toRightOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/promotion_page_image_slider_now_image_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1"
                            android:textSize="15.5sp"
                            android:textColor="#fff"
                            android:fontFamily="@font/nanumgothic"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="/"
                            android:textSize="15.5sp"
                            android:textColor="#fff"
                            android:fontFamily="@font/nanumgothic"/>
                        <TextView
                            android:id="@+id/promotion_page_image_slider_whole_image_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5"
                            android:textSize="15.5sp"
                            android:textColor="#fff"
                            android:fontFamily="@font/nanumgothic"/>
                    </LinearLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>

                &lt;!&ndash;하트, 공유&ndash;&gt;
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginRight="20dp"
                    app:layout_constraintRight_toRightOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:id="@+id/promotion_page_heart_on_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:visibility="invisible"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/icon_heart_on"/>
                    <ImageButton
                        android:id="@+id/promotion_page_heart_off_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:background="@drawable/icon_heart_off"/>
                    <ImageButton
                        android:id="@+id/promotion_page_share_btn"
                        android:layout_marginLeft="5dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/promotion_page_heart_off_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:background="@drawable/icon_share"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

            &lt;!&ndash;룸정보 레이아웃&ndash;&gt;
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/promotion_page_room_content_layout_dont_use"
                android:paddingBottom="12dp"
                android:background="@drawable/style_bottom_bababa_1dp_solid_transparent"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                &lt;!&ndash;스튜디오 이름&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_studio_name"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:text="APRIL studio"
                    android:textColor="#303030"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanumsquare_b"/>
                &lt;!&ndash;룸 이름&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_room_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toRightOf="@id/promotion_page_studio_name"
                    android:text="B room"
                    android:textColor="#303030"
                    android:textSize="18sp"
                    android:fontFamily="@font/nanumsquare_r"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"/>
                &lt;!&ndash;공담인증&ndash;&gt;
                <include
                    android:id="@+id/promotion_page_gongdam_confirmed_layout"
                    layout="@layout/include_gongdam_confirmed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_marginTop="14dp"
                    android:layout_marginRight="20dp"/>
                &lt;!&ndash;디테일 정보&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_room_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/promotion_page_studio_name"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:text="detail detail detail detail detail detail detail detail detail detail detail detail detail detail"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquare_r"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="15dp"/>
                &lt;!&ndash;레이팅바&ndash;&gt;
                <RatingBar
                    android:id="@+id/promotion_page_ratingBar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/promotion_page_room_detail_content"
                    android:numStars="5"
                    android:stepSize="0.5"
                    style="@style/customRatingBar"
                    android:isIndicator="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"/>
                &lt;!&ndash;후기 수&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_review_num"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    app:layout_constraintLeft_toRightOf="@id/promotion_page_ratingBar"
                    app:layout_constraintTop_toTopOf="@id/promotion_page_ratingBar"
                    app:layout_constraintBottom_toBottomOf="@id/promotion_page_ratingBar"
                    android:text="10"
                    android:textColor="#303030"
                    android:textSize="14sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                &lt;!&ndash;장소&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/promotion_page_ratingBar"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="서울 송파구 오륜동"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                &lt;!&ndash;키워드&ndash;&gt;
                <TextView
                    android:id="@+id/promotion_page_keyword_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/promotion_page_location"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_marginTop="11dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:text="셀프스튜디오 자연광 24시간"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            &lt;!&ndash;이용안내 레이아웃&ndash;&gt;
            <LinearLayout
                android:orientation="vertical"
                android:paddingTop="30dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                &lt;!&ndash;"이용안내"&ndash;&gt;
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/how_to_use"
                    android:textColor="#303030"
                    android:textSize="19.5sp"
                    android:fontFamily="@font/nanumsquare_b"/>
                &lt;!&ndash;이용안내 4가지 레이아웃&ndash;&gt;
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#eeeeee"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:layout_marginTop="11dp"
                    android:orientation="horizontal">
                    &lt;!&ndash;이용요금/시간 레이아웃&ndash;&gt;
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_right_bababa_10">
                        &lt;!&ndash;10만원&ndash;&gt;
                        <LinearLayout
                            android:id="@+id/promotion_page_dont_use"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            &lt;!&ndash;10&ndash;&gt;
                            <TextView
                                android:id="@+id/promotion_page_price_per_hour_TextV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textColor="#660000"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                            &lt;!&ndash;만원&ndash;&gt;
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="만원"
                                android:textColor="#303030"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                        </LinearLayout>
                        &lt;!&ndash;이용요금/시간&ndash;&gt;
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/promotion_page_dont_use"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/price_per_hour"
                            android:textColor="#303030"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquare_r"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    &lt;!&ndash;최소예약시간 레이아웃&ndash;&gt;
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_right_bababa_10">
                        &lt;!&ndash;3시간&ndash;&gt;
                        <LinearLayout
                            android:id="@+id/promotion_page_dont_use2"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            &lt;!&ndash;10&ndash;&gt;
                            <TextView
                                android:id="@+id/promotion_page_min_reservation_time_TextV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="10"
                                android:textColor="#660000"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                            &lt;!&ndash;시간&ndash;&gt;
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/hour"
                                android:textColor="#303030"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                        </LinearLayout>
                        &lt;!&ndash;최소예약시간&ndash;&gt;
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/promotion_page_dont_use2"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/min_reservation_time"
                            android:textColor="#303030"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquare_r"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    &lt;!&ndash;기본입장인원 레이아웃&ndash;&gt;
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:background="@drawable/style_right_bababa_10">
                        &lt;!&ndash;4명&ndash;&gt;
                        <LinearLayout
                            android:id="@+id/promotion_page_dont_use3"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            &lt;!&ndash;4&ndash;&gt;
                            <TextView
                                android:id="@+id/promotion_page_min_people_TextV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4"
                                android:textColor="#660000"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                            &lt;!&ndash;명&ndash;&gt;
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/myeong"
                                android:textColor="#303030"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                        </LinearLayout>
                        &lt;!&ndash;기본입장인원&ndash;&gt;
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/promotion_page_dont_use3"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/min_people"
                            android:textColor="#303030"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquare_r"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    &lt;!&ndash;1인추가/시간 레이아웃&ndash;&gt;
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        &lt;!&ndash;0.5만원&ndash;&gt;
                        <LinearLayout
                            android:id="@+id/promotion_page_dont_use4"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            app:layout_constraintRight_toRightOf="parent"
                            android:layout_marginTop="13dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            &lt;!&ndash;0.5&ndash;&gt;
                            <TextView
                                android:id="@+id/promotion_page_one_more_people_per_hour_TextV"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0.5"
                                android:textColor="#660000"
                                android:textSize="36sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                            &lt;!&ndash;명&ndash;&gt;
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/man_won"
                                android:textColor="#303030"
                                android:textSize="12sp"
                                android:fontFamily="@font/nanumsquare_r"/>
                        </LinearLayout>
                        &lt;!&ndash;기본입장인원&ndash;&gt;
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toBottomOf="@id/promotion_page_dont_use4"
                            app:layout_constraintRight_toRightOf="parent"
                            app:layout_constraintLeft_toLeftOf="parent"
                            android:layout_marginTop="20dp"
                            android:text="@string/one_more_people_per_hour"
                            android:textColor="#303030"
                            android:textSize="12sp"
                            android:fontFamily="@font/nanumsquare_r"/>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
            </LinearLayout>

            &lt;!&ndash;추가요금 레이아웃&ndash;&gt;
            <LinearLayout
                android:id="@+id/promotion_page_additional_fares_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="50dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/additional_fares"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:fontFamily="@font/nanumsquare_r"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/promotion_page_additional_fares_recyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"/>
            </LinearLayout>

            &lt;!&ndash;기타유의사항&ndash;&gt;
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="21dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/etc_you_have_to_know"
                    android:textColor="#303030"
                    android:textSize="16sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/etc_you_have_to_know2"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
            </LinearLayout>

            &lt;!&ndash;후기 레이아웃&ndash;&gt;
            <LinearLayout
                android:id="@+id/promotion_page_review_layout"
                android:orientation="vertical"
                android:paddingTop="50dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                &lt;!&ndash;"후기"&ndash;&gt;
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/review"
                    android:textColor="#303030"
                    android:textSize="19.5sp"
                    android:fontFamily="@font/nanumsquare_b"/>
                &lt;!&ndash;후기 레이아웃&ndash;&gt;
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_marginTop="11dp">
                    &lt;!&ndash;후기_이미지&ndash;&gt;
                    <ImageView
                        android:id="@+id/promotion_page_review_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toLeftOf="parent"
                        android:scaleType="centerCrop"/>
                    &lt;!&ndash;후기_후기쓴사람&ndash;&gt;
                    <TextView
                        android:id="@+id/promotion_page_review_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="***님"
                        android:textColor="#303030"
                        android:textSize="16sp"
                        android:fontFamily="@font/nanumsquare_b"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintLeft_toRightOf="@id/promotion_page_review_image"
                        android:layout_marginTop="7dp"
                        android:layout_marginLeft="15dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/sir"
                        android:textColor="#303030"
