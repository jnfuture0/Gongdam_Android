<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_my_space_roomList_board_layout"
    android:clickable="true"
    android:background="@android:color/transparent"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <ImageView
        android:id="@+id/form_my_space_roomList_board_image"
        android:layout_width="145dp"
        android:layout_height="90dp"
        android:src="@drawable/test_image"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        android:background="@drawable/style_only_radius_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>



    <LinearLayout
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/form_my_space_roomList_board_image"
        android:layout_marginLeft="10dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/form_my_space_roomList_board_studio_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="studio_name"
            android:textColor="#303030"
            android:textSize="16sp"
            android:fontFamily="@font/nanumsquare_b"/>

        <TextView
            android:id="@+id/form_my_space_roomList_board_room_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="room_name"
            android:textColor="#303030"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_marginTop="9dp"/>

        <TextView
            android:id="@+id/form_my_space_roomList_board_room_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="content"
            android:maxLines="3"
            android:ellipsize="end"
            android:textColor="#303030"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r"
            android:layout_marginTop="9dp"/>
    </LinearLayout>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/form_my_space_roomList_board_like_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="invisible"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/icon_heart_on"/>
        <ImageButton
            android:id="@+id/form_my_space_roomList_board_unlike_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:background="@drawable/icon_heart_off"/>
        <ImageButton
            android:id="@+id/form_my_space_roomList_board_share_btn"
            android:layout_marginLeft="5dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/form_my_space_roomList_board_unlike_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/icon_share"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>