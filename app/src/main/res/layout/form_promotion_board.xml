<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/form_promotion_board_layout"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/form_promotion_board_image_covered_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/style_only_radius_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:id="@+id/form_promotion_board_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/test_image"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="@drawable/style_only_radius_10"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginLeft="100dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/form_promotion_board_studio_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="APRIL studio"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:textColor="#303030"
                        android:textSize="18sp"
                        android:fontFamily="@font/nanumsquare_b"/>

                    <TextView
                        android:id="@+id/form_promotion_board_room_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/nanumsquare_r"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:text="B room"
                        android:textColor="#303030"
                        android:textSize="18sp" />
                </LinearLayout>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"/>
            </LinearLayout>




            <TextView
                android:id="@+id/form_promotion_board_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="서울 송파구"
                android:textColor="#6e6e6e"
                android:textSize="10sp"
                android:fontFamily="@font/nanumsquare_r"
                android:layout_marginTop="2dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/form_promotion_board_content"
                    android:layout_width="0dp"
                    android:layout_weight="3"
                    android:layout_height="wrap_content"
                    android:text="test_content"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textColor="#6e6e6e"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:textSize="12sp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <!--day, time-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/form_promotion_board_day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06.21"
                    android:maxLines="1"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>

                <TextView
                    android:id="@+id/form_promotion_board_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="14h"
                    android:maxLines="1"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:fontFamily="@font/nanumsquare_r"
                    android:textColor="#6e6e6e"
                    android:text="부터"
                    android:textSize="10sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/form_promotion_board_day2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="06.21"
                    android:maxLines="1"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>

                <TextView
                    android:id="@+id/form_promotion_board_time2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="18h"
                    android:maxLines="1"
                    android:textColor="#303030"
                    android:textSize="12sp"
                    android:fontFamily="@font/nanumsquare_r"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/nanumsquare_r"
                    android:layout_marginLeft="2dp"
                    android:textColor="#6e6e6e"
                    android:text="까지"
                    android:textSize="10sp"/>
            </LinearLayout>



        </LinearLayout>





        <TextView
            android:id="@+id/form_promotion_board_discount_percent_textView"
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:letterSpacing="-0.05"
            android:gravity="bottom"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"
            android:text="30%"
            android:textSize="30sp"
            android:textColor="#660000"
            android:fontFamily="@font/nanumsquare_eb"/>



        <TextView
            android:id="@+id/form_promotion_board_won_per_hour_textView_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/form_promotion_board_won_per_hour_textView"
            app:layout_constraintRight_toRightOf="@id/form_promotion_board_won_per_hour_textView"
            android:textSize="12sp"
            android:fontFamily="@font/nanumsquare_r"
            android:textColor="#aaaaaa"/>

        <TextView
            android:id="@+id/form_promotion_board_won_per_hour_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:fontFamily="@font/nanumsquare_eb"
            android:textColor="#5b5b5b"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginRight="10dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>