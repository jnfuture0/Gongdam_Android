<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_page_navigation_header"
    android:orientation="vertical"
    android:background="@drawable/style_navigation_header"
    android:paddingBottom="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="75dp"
        android:layout_marginLeft="35dp">

        <ImageView
            android:id="@+id/navigation_header_image_view"
            android:layout_width="80dp"
            android:layout_height="80dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/human"/>

        <TextView
            android:id="@+id/navigation_header_user_name_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14dp"
            android:text="***ë‹˜"
            android:textColor="#fff"
            android:fontFamily="@font/nanumsquare_b"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/navigation_header_image_view"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="23dp"/>

        <TextView
            android:id="@+id/navigation_header_user_email_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12dp"
            android:text="***@naver.com"
            android:textColor="#fff"
            android:fontFamily="@font/nanumsquare_r"
            app:layout_constraintTop_toBottomOf="@id/navigation_header_user_name_textView"
            app:layout_constraintLeft_toLeftOf="@id/navigation_header_user_name_textView"
            android:layout_marginTop="5dp"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/navigation_header_logout_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:layout_marginRight="35dp"
        android:layout_marginTop="194dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/style_button_rad10_bfbfbf_to_aaaaaa"
        android:text="@string/logout"
        android:textColor="#fff"
        android:textSize="16sp"
        android:fontFamily="@font/nanumsquare_b"/>

</androidx.constraintlayout.widget.ConstraintLayout>