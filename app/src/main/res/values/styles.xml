<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name = "IntroTheme" parent="Theme.AppCompat.NoActionBar">
        <item name = "android:windowBackground">@drawable/intro</item>
        <item name="android:screenOrientation">portrait</item>
    </style>

    <style name="TabTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#d9d9d9</item> <!--배경-->
        <item name="android:textColorPrimary">@android:color/white</item><!--탭바 선택된 텍스트-->
        <item name="android:textColorSecondary">@android:color/black</item><!--탭바 텍스트-->
        <item name="colorAccent">#b5b5b5</item><!--하단 바 색-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="TabTheme2" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">#fff</item> <!--배경-->
        <!--<item name="android:textColorPrimary">#1A9AD3</item>탭바 선택된 텍스트-->
        <item name="android:textColorSecondary">#fff</item><!--탭바 텍스트-->
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/nanumsquare_b</item>
        <item name="android:textSize">12.5sp</item>
        <item name="colorAccent">#001023</item> <!--하단 바 색-->

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="customRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_rating_bar</item>
        <item name="android:minHeight">20dip</item>
        <item name="android:maxHeight">20dip</item>
        <item name="android:minWidth">110dip</item>
        <item name="android:maxWidth">110dip</item>
    </style>

    <style name="customBigRatingBar" parent="Widget.AppCompat.RatingBar">
        <item name="android:progressDrawable">@drawable/custom_big_rating_bar</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:minWidth">280dp</item>
        <item name="android:maxWidth">280dp</item>
    </style>
</resources>
